{
    "manifest_version": 3,
    "name": "Omnivox Theme Customizer",
    "version": "1.0",
    "description": "Customize the appearance of Omnivox with custom themes.",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://*.omnivox.ca/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://*.omnivox.ca/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  